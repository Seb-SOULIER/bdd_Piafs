{% extends 'base.html.twig' %}

{% block title %}Partner index{% endblock %}

{% block body %}
    <h1>Partner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LienUrl</th>
                <th>CreatedAt</th>
                <th>IsFavorite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>{{ partner.id }}</td>
                <td>{{ partner.name }}</td>
                <td>{{ partner.lienUrl }}</td>
                <td>{{ partner.createdAt ? partner.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ partner.isFavorite ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_partner_show', {'id': partner.id}) }}">show</a>
                    <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_partner_new') }}">Create new</a>
{% endblock %}
