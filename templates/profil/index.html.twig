{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="body-home">
		<div class="page-acceuil mt-3">
			<div class="text-acceuil m-auto">
				<h1 class="text-center">Mon profil</h1>
                <div class="d-flex">
                    <img class="img-profil" src="{{asset('/build/avatar_piafs/')}}{{user.avatar}}" title="avatar Piafs Actifs" alt="avatar Piafs Actifs" height="150px">
                    <div class="w-50 d-flex m-auto flex-column" >
                        <h4 style="font-weight: bold">
						    {{ app.user.email }}
                        </h4>
                        <p>
                            {% if user.roles|json_encode == '["ROLE_ADMIN"]' %}
                                Administrateur
                            {% elseif user.roles|json_encode == '["ROLE_INTER"]' %}
                                Intervenant
                            {% else %}
                                Utilisateur
                            {% endif %}
                        </p>
                    </div>
                </div>
                <div class="card-actualite">
                    <p>{{user.roles|json_encode}}</p>
                </div>
			</div>
		</div>
	</div>

    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Token</th>
                <th>ValidToken</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Birthdate</th>
                <th>Avatar</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Phone</th>
                <th>SubcribeAt</th>
                <th>RestoreCode</th>
                <th>AllActif</th>
                <th>AllInactif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.token }}</td>
                <td>{{ user.validToken ? user.validToken|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.zipcode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.subcribeAt ? user.subcribeAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.restoreCode }}</td>
                <td>{{ user.allActif ? 'Yes' : 'No' }}</td>
                <td>{{ user.allInactif ? 'Yes' : 'No' }}</td>
                <td>
                    {# <a href="{{ path('app_profil_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_profil_edit', {'id': user.id}) }}">edit</a> #}
                </td>
            </tr>
        </tbody>
    </table>

    {# <a href="{{ path('app_profil_new') }}">Create new</a> #}
{% endblock %}
