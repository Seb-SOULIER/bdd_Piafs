{% extends 'base.html.twig' %}

{% block title %}Les Piafs Actifs - Reset password{% endblock %}

{% block body %}
<div class="bodyConnect">
    <div class="container">
        <div class="form-align">
            {{ form_start(restoreForm) }}
                {{ form_widget(restoreForm.code) }}
                {{ form_widget(restoreForm.password.first) }}
                {{ form_errors(restoreForm.password.first) }}
                {{ form_widget(restoreForm.password.second) }}
                <button class="btn btn-connect" type="submit">
                    Envoyer
                </button>
            {{ form_end(restoreForm) }}
            <a  href="{{ path('app_login') }}" class="text-inscription mt-3">Déjà un compte? Se connecter</a>
        </div>
    </div>
</div>

{% endblock %}
