{% extends 'base.html.twig' %}

{% block title %}Les Piafs Actifs - Inscription{% endblock %}

{% block body %}
<div class="bodyConnect">
    <div class="container">
        <div class="form-align">
            {{ form_start(registrationForm) }}

                {{ form_widget(registrationForm.email) }}
                {{ form_widget(registrationForm.plainPassword) }}
                <p class="mt-2">{{ form_widget(registrationForm.agreeTerms) }} J'accepte les mentions légales et la polique de confidentialite</p>

                <button type="submit" class="btn">Register</button>
            {{ form_end(registrationForm) }}
            <a  href="{{ path('app_login') }}" class="text-inscription mt-3">Déjà un compte? Se connecter</a>
        </div>
    </div>
</div>

{% endblock %}
