{% extends 'base.html.twig' %}

{% block title %}Nos ateliers{% endblock %}

{% block body %}

{% set day = {
    0 : 'Dimanche',
    1 : 'Lundi',
    2 : 'Mardi',
    3 : 'Mercredi',
    4 : 'Jeudi',
    5 : 'Vendredi',
    6 : 'Samedi'
}
%}

{% set month = {
    '' : 'Janvier',
    '' : 'FÃ©vrier',
    '' : 'Mars',
    'Apr' : 'Avril',
    '' : 'Mai',
    '' : 'Juin',
    '' : 'Juillet',
    '' : 'Aout',
    '' : 'Septembre',
    '' : 'Octobre',
    '' : 'Novembre',
    '' : 'Decembre'
}
%}

<div class="body-home">
    <div class="page-acceuil m-3">
        <div class="text-acceuil m-auto">
            <div class="card-actualite">
                <h1 class="text-center">Nos ateliers</h1>
            </div>
            {% for atelier in listAteliers %}
            <a class="card-atelier" href="{{ path('site_atelier',{'atelier':atelier.id})}}">
                <div class="date-atelier">
                    <p>
                        {{ day[atelier.date|date("w")] }}
                    </p>
                    <h1>{{ atelier.date|date("d") }}</h1>
                    <p>
                        {{ month[atelier.date|date("M")] }}
                    </p>
                </div>
                <div class="date-atelier-2">
                    <p>
                        {{ atelier.hourStart|date("H:i") }}
                    </p>
                    <p>-</p>
                    <p>
                        {{ atelier.hourStop|date("H:i") }}
                    </p>
                </div>
                <div class="corp-atelier">
                    <p class='title-atelier'>{{ atelier.name }}</p>
                    <p class='description-atelier'>{{ atelier.description }}</p>
                    <p class='author-atelier'>{{ atelier.intervenant.firstname }}</p>
                </div>
                <div class="suite-atelier">
                    <h1>></h1>
                </div>
                    {# <div class="d-flex" style="align-items:baseline">
                    <p class='title-profil'>Date de naissance :</p>
                    <p class='text-profil'>gggg</p>
                </div>
                <div class="d-flex flex-row-reverse">
                    <button class='btn button1'>AJOUTER</button>
                    <a class="btn button1" href="{{ path('app_profil') }}">RETOUR</a>
                </div> #}
            </a>
            {% endfor %}
            
        </div>
    </div>
</div>

{% endblock %}
