{% extends 'base.html.twig' %}

{% block title %}Atelier{% endblock %}

{% block body %}
    <h1>Atelier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ atelier.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ atelier.date ? atelier.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HourStart</th>
                <td>{{ atelier.hourStart ? atelier.hourStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HourStop</th>
                <td>{{ atelier.hourStop ? atelier.hourStop|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ atelier.place }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ atelier.description }}</td>
            </tr>
            <tr>
                <th>PlaceReserved</th>
                <td>{{ atelier.placeReserved }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_crud_atelier_index') }}">back to list</a>

    <a href="{{ path('app_crud_atelier_edit', {'id': atelier.id}) }}">edit</a>

    {{ include('crud_atelier/_delete_form.html.twig') }}
{% endblock %}
