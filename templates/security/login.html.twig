{% extends 'base.html.twig' %}

{% block title %}Les Piafs Actifs - Se connecter{% endblock %}

{% block body %}
<div class="bodyConnect">
    <div class="container">
        <div class="form-align">
            <form method="post" class="w-100">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="text-inscription color-3">
                        Vous êtes déjà connecté avec le mail : {{ app.user.userIdentifier }},<br> <a class="text-inscription" href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}

                {# <label for="inputEmail">Email</label> #}
                <input placeholder="Email"  type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                {# <label for="inputPassword">Mot de passe</label> #}
                <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-connect" type="submit">
                    SE CONNECTER
                </button>
            </form>
            <a class="text-inscription">J'ai oublié mon mot de passe...</a>
            <a  href="{{ path('register') }}" class="text-inscription mt-3">Pas de compte, créer ton compte!</a>
        </div>
    </div>
</div>

{% endblock %}
