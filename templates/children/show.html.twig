{% extends 'base.html.twig' %}

{% block title %}Children{% endblock %}

{% block body %}
    <h1>Children</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ child.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ child.name }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ child.birthdate ? child.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ child.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ActiveAt</th>
                <td>{{ child.activeAt ? child.activeAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ child.firstname }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_children_index') }}">back to list</a>

    <a href="{{ path('app_children_edit', {'id': child.id}) }}">edit</a>

    {{ include('children/_delete_form.html.twig') }}
{% endblock %}
